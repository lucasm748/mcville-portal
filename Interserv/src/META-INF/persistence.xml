<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="AulaHibernate01PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>modelo.Cliente</class>
    <class>modelo.Estado</class>
    <class>modelo.Cidade</class>
    <class>modelo.Pessoa</class>
    <class>modelo.GrupoProduto</class>
    <class>modelo.Produto</class>
    <class>modelo.Venda</class>
    <class>modelo.PessoaJ</class>
    <class>modelo.PessoaF</class>
    <class>modelo.ItensVenda</class>
    <class>controle.JTable</class>
    <class>modelo.Usuario</class>
    <class>modelo.Empresa</class>
    <properties>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.connection.username" value="postgres"/>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
      <property name="hibernate.connection.password" value="postgres"/>
      <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/sgc"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
